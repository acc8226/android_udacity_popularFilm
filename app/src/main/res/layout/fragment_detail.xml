<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.example.popularmovie.DetailActivity$DetailFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detail_text"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginBottom="16dp"
            android:background="@color/titleColor"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/backdrop_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_text"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:maxWidth="250dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/release_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/backdrop_iv"
            android:gravity="center_vertical"
            android:text="1998"
            android:textColor="@color/fontColor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/vote_average_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/release_date_text"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/backdrop_iv"
            android:gravity="center_vertical"
            android:text="5.1"
            android:textColor="@color/fontColor"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/backdrop_iv"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/fontColor"
            android:textSize="19sp" />

    </RelativeLayout>


</ScrollView>


